<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myApp="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLoading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="8dp">

    <View
        android:id="@+id/viewPoster1"
        android:layout_width="0dp"
        android:layout_height="215dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintDimensionRatio="w,16:9"
        myApp:layout_constraintEnd_toEndOf="parent"
        myApp:layout_constraintStart_toStartOf="parent"
        myApp:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewDescription1"
        android:layout_width="0dp"
        myApp:layout_constraintWidth_percent="0.7"
        android:layout_height="12dp"
        android:layout_margin="8dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="parent"
        myApp:layout_constraintTop_toBottomOf="@+id/viewPoster1" />


    <View
        android:id="@+id/viewUserName1"
        android:layout_width="0dp"
        myApp:layout_constraintWidth_percent="0.5"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="@+id/viewDescription1"
        myApp:layout_constraintTop_toBottomOf="@+id/viewDescription1" />

    <View
        android:id="@+id/viewLikes1"
        android:layout_width="0dp"
        android:layout_height="12dp"
        myApp:layout_constraintWidth_percent="0.3"
        android:layout_marginTop="12dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="@+id/viewUserName1"
        myApp:layout_constraintTop_toBottomOf="@+id/viewUserName1" />

    <View
        android:id="@+id/viewPoster2"
        android:layout_width="0dp"
        android:layout_height="215dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintDimensionRatio="w,16:9"
        myApp:layout_constraintEnd_toEndOf="parent"
        myApp:layout_constraintStart_toStartOf="parent"
        myApp:layout_constraintTop_toBottomOf="@+id/viewLikes1" />

    <View
        android:id="@+id/viewDescription2"
        android:layout_width="0dp"
        myApp:layout_constraintWidth_percent="0.7"
        android:layout_height="12dp"
        android:layout_margin="8dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="parent"
        myApp:layout_constraintTop_toBottomOf="@+id/viewPoster2" />


    <View
        android:id="@+id/viewUserName2"
        android:layout_width="0dp"
        myApp:layout_constraintWidth_percent="0.5"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="@+id/viewDescription2"
        myApp:layout_constraintTop_toBottomOf="@+id/viewDescription2" />

    <View
        android:id="@+id/viewLikes2"
        android:layout_width="0dp"
        android:layout_height="12dp"
        myApp:layout_constraintWidth_percent="0.3"
        android:layout_marginTop="12dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="@+id/viewUserName2"
        myApp:layout_constraintTop_toBottomOf="@+id/viewUserName2" />


    <View
        android:id="@+id/viewPoster3"
        android:layout_width="0dp"
        android:layout_height="215dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintDimensionRatio="w,16:9"
        myApp:layout_constraintEnd_toEndOf="parent"
        myApp:layout_constraintStart_toStartOf="parent"
        myApp:layout_constraintTop_toBottomOf="@+id/viewLikes2" />

    <View
        android:id="@+id/viewDescription3"
        android:layout_width="0dp"
        myApp:layout_constraintWidth_percent="0.7"
        android:layout_height="12dp"
        android:layout_margin="8dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="parent"
        myApp:layout_constraintTop_toBottomOf="@+id/viewPoster3" />


    <View
        android:id="@+id/viewUserName3"
        android:layout_width="0dp"
        myApp:layout_constraintWidth_percent="0.5"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="@+id/viewDescription3"
        myApp:layout_constraintTop_toBottomOf="@+id/viewDescription3" />

    <View
        android:id="@+id/viewLikes3"
        android:layout_width="0dp"
        android:layout_height="12dp"
        myApp:layout_constraintWidth_percent="0.3"
        android:layout_marginTop="12dp"
        android:background="@color/colorGreyLight"
        myApp:layout_constraintStart_toStartOf="@+id/viewUserName3"
        myApp:layout_constraintTop_toBottomOf="@+id/viewUserName3" />





</androidx.constraintlayout.widget.ConstraintLayout>
